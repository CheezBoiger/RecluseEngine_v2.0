{
    "compiler": [
        {
            "language": "glsl",
            "version": "latest",
            "name": "glslang",
            "output": {
                "ext": "spv",
                "append_shader_ext": true
            }
        },
        {
            "version": "latest",
            "name": "dxc",
            "language": "hlsl",
            "output": {
                "ext": "cso",
                "append_shader_ext": true
            }
        }
    ],
    "configs": {
        "os": "win32",
        "include_paths": [""],
        "shaders": {
            "graphics": {
                "pixel": {
                    "ext": "ps"
                },
                "vertex": {
                    "ext": "vs"
                },
                "hull": {
                    "ext": "hs"
                },
                "domain": {
                    "ext": "ds"
                },
                "geometry": {
                    "ext": "gs"
                },
                "mesh": {
                    "ext": "ms"
                },
                "amplificiation": {
                    "ext": "as"
                },
                "raytrace": {
                    "raygen": {
                        "ext": "rg"
                    },
                    "anyhit": {
                        "ext": "ah"
                    },
                    "closesthit": {
                        "ext": "ch"
                    },
                    "miss": {
                        "ext": "m"
                    }
                }
            },

            "general": {
                "compute": {
                    "ext": "cs"
                }
            }
        }
    }
}